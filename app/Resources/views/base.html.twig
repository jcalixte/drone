<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8" />
		<title>{% block title %}Bee Eye{% endblock %}</title>
		<link href="{{ asset('bootstrap/css/bootstrap.min.css') }}" media="screen, projection" rel="stylesheet" type="text/css" />
		<link href="{{ asset('stylesheets/screen.css') }}" media="screen, projection" rel="stylesheet" type="text/css" />
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
		{% block stylesheets %}{% endblock %}
		<link rel="icon" type="image/x-icon" href="{{ asset('beeEye.png') }}" />
		{% block javascripts_before %}{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-default navbar-collapse">
			<div class="container-fluid">
				{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
					{# {{ 'layout.logged_in_as'|trans({ '%username%': app.user.username|capitalize }, 'FOSUserBundle') }} | #}
					<a href="{{ path('drone_home_homepage') }}" title="Accueil">Accueil</a>
					<a href="{{ path('fos_user_profile_show') }}">{{ app.user.username|capitalize }}</a>
                    <a href="{{ path('drone_map_homepage') }}">Cartographie</a>
                    <a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a>
				{% else %}
					<a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a> |
					<a href="{{ path('fos_user_registration_register') }}">S'inscrire</a>
				{% endif %}
				{% if app.session.flashbag.all()|length > 0 %}
					<div class="message-flash">
						{% for type, messages in app.session.flashbag.all() %}
							{% for message in messages %}
								<div class="flash-{{ type }}">
									{{ message }}
								</div>
							{% endfor %}
						{% endfor %}
					</div>
				{% endif %}
				<ul class="nav navbar-nav navbar-right">
					<span class="weather-content">
						<i id="weather-main"></i> <span class="weather-main"></span> |
						<i id="weather-temp"></i> <span class="weather-temp"></span><i class="wi wi-celsius"></i> |
						<i id="weather-hum"></i> <span class="weather-hum"></span>% d'humidit√© |
						<i class="wi wi-strong-wind"></i><i id="weather-wind"></i> <span class="weather-wind"></span>km/h,
						<i id="weather-wind-direction"></i> <span class="weather-wind-dir"></span> |
						<i class="wi wi-sunrise"></i> <span class="weather-sunrise"></span>
						<i class="wi wi-sunset"></i> <span class="weather-sunset"></span>
						{# <span class="weather"></span> #}
					</span>
				</ul>
			</div>
		</nav>
		
		<div id="content containeur-fluid">
			{% block body %}{% endblock %}
		</div>
		<footer>
            {% block footer %}{% endblock %}
		</footer>
		{% block javascripts %}
			<script src="{{ asset('javascript/jquery.min.js') }}" type="text/javascript" charset="utf-8"></script>
            <script src="{{ asset('javascript/jquery-ui/jquery-ui.min.js') }}" type="text/javascript" charset="utf-8"></script>
			<script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
			<script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
			<script src="{{ asset('bootstrap/js/bootstrap.min.js') }}" type="text/javascript" charset="utf-8"></script>
		{% endblock %}
	</body>
</html>